@{
    ViewData["Title"] = "Inicio";
}

<div class="mt-4">
    <h1>CampusRide Admin</h1>
    <p>Panel de administración para gestionar campus, sectores, vehículos y usuarios de CampusRide.</p>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <div class="mt-3">
            <h4>Gestión rápida</h4>
            <p>
                @* Admin y Conductor: pueden gestionar Sectores y Vehículos *@
                @if (User.IsInRole("Admin") || User.IsInRole("Conductor"))
                {
                    <a class="btn btn-primary me-2" asp-controller="Sectores" asp-action="Index">
                        Gestionar Sectores
                    </a>

                    <a class="btn btn-secondary me-2" asp-controller="Vehiculos" asp-action="Index">
                        Gestionar Vehículos
                    </a>
                }

                @* Solo Admin: gestionar usuarios *@
                @if (User.IsInRole("Admin"))
                {
                    <a class="btn btn-outline-dark" asp-controller="Users" asp-action="Index">
                        Gestionar Usuarios
                    </a>
                }
            </p>
        </div>
    }
    else
    {
        <p class="mt-3">
            <a class="btn btn-primary" asp-controller="Account" asp-action="Login">
                Iniciar sesión
            </a>
        </p>
    }
</div>
