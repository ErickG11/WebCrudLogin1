@model IEnumerable<WebCrudLogin.Models.Vehiculo>

@{
    ViewData["Title"] = "Vehículos";
}

<h2>Vehículos</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Nuevo Vehículo</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Placa</th>
            <th>Modelo</th>
            <th>Conductor</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Placa</td>
                <td>@item.Modelo</td>
                <td>@item.Conductor?.Username</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
