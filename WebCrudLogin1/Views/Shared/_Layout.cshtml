﻿
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebCrudLogin</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    @{
        var isAuthPage = (ViewContext.RouteData.Values["Controller"]?.ToString() == "Account");
    }

    @if (!isAuthPage)
    {
        <div class="ambient ambient-1"></div>
        <div class="ambient ambient-2"></div>
        <header class="app-header">
            <div class="brand">
                <div class="brand-mark">CR</div>
                <div>
                    <div class="brand-name">CampusRide</div>
                    <small class="brand-tag">Movilidad inteligente</small>
                </div>
            </div>
            <nav class="nav-grid">
                <a class="nav-chip" asp-controller="Home" asp-action="Index">Inicio</a>
                <a class="nav-chip" asp-controller="Products" asp-action="Index">Products</a>

                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    <span class="user-chip">Hola, @User.Identity!.Name</span>
                    <a class="nav-chip nav-chip--danger"
                       asp-controller="Account" asp-action="Logout">
                        Salir
                    </a>
                }
                else
                {
                    <a class="nav-chip" asp-controller="Account" asp-action="Login">Login</a>
                    <a class="nav-chip nav-chip--primary" asp-controller="Account" asp-action="Register">Registro</a>
                }
            </nav>
        </header>
    }

    <div class="page-shell">
        <main role="main" class="page-surface">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>