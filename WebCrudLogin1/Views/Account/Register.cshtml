@model WebCrudLogin.Models.RegisterViewModel

@{
    ViewData["Title"] = "Registrarse";
}

<div class="cr-auth-container">
    <div class="cr-auth-card">
        <h2 class="mb-3">Crear cuenta</h2>
        <p class="text-muted mb-4">
            Regístrate en CampusRide y elige si deseas ser usuario pasajero o conductor.
        </p>

        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Cedula" class="form-label"></label>
                <input asp-for="Cedula" class="form-control" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
                <div class="form-text">
                    La cédula se valida en el servidor y debe ser única en el sistema.
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Role" class="form-label"></label>
                <select asp-for="Role" class="form-select">
                    <option value="User">Usuario (pasajero)</option>
                    <option value="Conductor">Conductor</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100 mb-2">
                Registrarme
            </button>

            <a asp-action="Login" class="btn btn-outline-light w-100">
                ¿Ya tienes cuenta? Inicia sesión
            </a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
