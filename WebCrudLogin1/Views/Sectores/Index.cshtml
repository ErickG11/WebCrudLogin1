@model IEnumerable<WebCrudLogin.Models.Sector>

@{
    ViewData["Title"] = "Sectores";
}

<h2>Sectores</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Nuevo Sector</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Campus</th>
            <th>Nombre del sector</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Campus?.Nombre</td>
                <td>@item.Nombre</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
