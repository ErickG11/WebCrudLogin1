@model WebCrudLogin.Models.CrearRutaViewModel

@{
    ViewData["Title"] = "Crear Ruta";
}

<h2>Crear Ruta</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger"></div>

    <h4>Datos de la ruta</h4>
    <hr />

    <div class="mb-3">
        <label class="form-label">Campus de salida</label>
        <select asp-for="CampusOrigenId" class="form-select" asp-items="ViewBag.CampusOrigenId"></select>
        <span asp-validation-for="CampusOrigenId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Sector de destino</label>
        <select asp-for="SectorId" class="form-select" asp-items="ViewBag.SectorId"></select>
        <span asp-validation-for="SectorId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CuposTotales" class="form-label"></label>
        <input asp-for="CuposTotales" class="form-control" />
        <span asp-validation-for="CuposTotales" class="text-danger"></span>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="DiaSemana" class="form-label">Día de la semana</label>
            <select asp-for="DiaSemana" class="form-select">
                <option value="Monday">Lunes</option>
                <option value="Tuesday">Martes</option>
                <option value="Wednesday">Miércoles</option>
                <option value="Thursday">Jueves</option>
                <option value="Friday">Viernes</option>
                <option value="Saturday">Sábado</option>
            </select>
            <span asp-validation-for="DiaSemana" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="HoraDelDia" class="form-label">Hora de salida</label>
            <select asp-for="HoraDelDia" class="form-select" asp-items="ViewBag.HoraDelDia"></select>
            <span asp-validation-for="HoraDelDia" class="text-danger"></span>
            <div class="form-text">
                Solo se permiten horarios entre 08:00 y 23:00.
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="DistanciaKm" class="form-label"></label>
        <input asp-for="DistanciaKm" class="form-control" />
        <span class="form-text">Se usará para calcular el precio (0.90 USD por km).</span>
        <span asp-validation-for="DistanciaKm" class="text-danger"></span>
    </div>

    <h4 class="mt-4">Datos del vehículo</h4>
    <hr />

    <div class="mb-3">
        <label asp-for="Placa" class="form-label"></label>
        <input asp-for="Placa" class="form-control" />
        <span asp-validation-for="Placa" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Marca" class="form-label"></label>
        <input asp-for="Marca" class="form-control" />
        <span asp-validation-for="Marca" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Modelo" class="form-label"></label>
        <input asp-for="Modelo" class="form-control" />
        <span asp-validation-for="Modelo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NumeroAsientos" class="form-label"></label>
        <input asp-for="NumeroAsientos" class="form-control" />
        <span asp-validation-for="NumeroAsientos" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
